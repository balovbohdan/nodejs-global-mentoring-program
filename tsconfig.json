{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2016", "es2017", "es2018"],

    "paths": {
      "#config": ["config"]
    }
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
